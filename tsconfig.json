{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": false,
    "lib": [
      "ESNext"
    ],
    "paths": {
      "@domains/*": [
        "domains/*"
      ],
      "@infra/*": [
        "infra/*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}